---
interface Props {
	size: number;
	class?: string;
}

const { size, class: classes } = Astro.props;
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	fill="none"
	viewBox="0 0 24 24"
	stroke-width="1.5"
	width={size}
	height={size}
	stroke="currentColor"
	class={classes ?? ''}
>
	<path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
</svg>
