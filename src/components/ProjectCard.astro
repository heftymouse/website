---
import GitHubIcon from '@/components/icons/GitHubIcon.astro';
import LinkIcon from '@/components/icons/LinkIcon.astro';

interface Props {
	name: string;
	time?: string;
	link?: string;
	github?: string;
}
const { name, time, link, github } = Astro.props;
---

<article class="card grid w-full gap-y-3 p-4 leading-snug">
	<h3 class="text-h4 leading-tight">{name}</h3>
	<div class="col-start-2 row-start-3 flex flex-row items-center justify-end gap-3 md:row-start-1">
		{
			link && (
				<a href={link} class:list={{ hidden: !link }}>
					<LinkIcon class="mt-[2px] w-[1.2rem] text-text" />
				</a>
			)
		}
		{
			github && (
				<a href={`https://github.com/${github}`}>
					<GitHubIcon class="h-[1.4rem] text-text" />
				</a>
			)
		}
	</div>
	<div class="col-span-2">
		<slot />
	</div>
	{time && <span class="text-caption text-neutral-500 dark:text-neutral-400">{time}</span>}
</article>
