---
import '../styles/styles.css';
import '../styles/variables.css';
import NavBar from '../components/NavBar.astro';
import CompactNavBar from '../components/CompactNavBar.astro';

interface Props {
	title?: string;
	embedTitle?: string;
	description?: string;
	centerContent?: boolean;
}

const { centerContent, title, embedTitle, description } =
	((Astro.props as any)['frontmatter'] as Props) || Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{`${title ? `${title} - ` : ''}heftymouse`}</title>
		<meta name="description" content={description ?? "heftymouse's home on the internet."} />
		<meta name="og:title" content={embedTitle ?? title ?? 'heftymouse'} />
		<meta name="og:url" content={Astro.url} />
		<meta name="og:description" content={description} />
		<meta name="og:site_name" content="heftymouse" />
		<meta name="theme-color" content="#fcd53f" />
		<slot name="head" />
	</head>
	<body
		class="grid min-h-[100vh] grid-rows-[auto_1fr] justify-items-center gap-4 sm:gap-12 bg-background p-8 supports-[height:_1dvh]:min-h-[100dvh] sm:p-8"
	>
		<a class="absolute -left-52 top-0 m-3 focus:left-0 print:hidden" href="#main">
			Skip to content
		</a>
		<header class="w-full sm:w-fit">
			<NavBar />
			<CompactNavBar />
		</header>
		<main
			id="main"
			class="max-w-[min(100%,80ch)] w-full"
			style=`align-self: ${centerContent ? 'center' : 'normal'}`
		>
			<slot />
		</main>
	</body>
</html>
